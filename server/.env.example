NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# ── FR-C.2: Email Alerts (Stale Lead Trigger) ──────────────
# If not configured, stale alerts will be logged to console only.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="SSSI GrowthEngine <noreply@sssi.com>"

# ── FR-C.2: Dev helper ──────────────────────────────────────
# Set to 'true' to run the stale check immediately on worker startup (for testing)
RUN_STALE_ON_START=false
